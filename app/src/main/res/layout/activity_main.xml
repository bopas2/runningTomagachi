<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.langt.myapplication.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/Sad"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/toggleButton"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="85dp"
            android:cropToPadding="true"
            android:src="@drawable/sad"
            android:visibility="gone" />

        <Button
            android:id="@+id/button"
            android:layout_width="109dp"
            android:layout_height="110dp"
            android:layout_below="@+id/Sad"
            android:layout_marginTop="74dp"
            android:layout_toEndOf="@+id/Sad"
            android:layout_toRightOf="@+id/Sad"
            android:background="@drawable/bagfood"
            android:onClick="buyFood()"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="50dp"
            tools:layout_marginLeft="25dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEVEL: "
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="29dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gold:"
        android:visibility="visible"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="29dp" />

    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="349dp"
        android:layout_height="39dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood:"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="397dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hungry"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="435dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy"
        tools:layout_editor_absoluteX="328dp"
        tools:layout_editor_absoluteY="437dp" />

    <ProgressBar
        android:id="@+id/progressBar6"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="96dp"
        android:layout_height="16dp"
        android:layout_marginBottom="77dp"
        android:layout_marginEnd="96dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="29dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/foodbowl"
        android:visibility="gone"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="258dp" />

    <ImageView
        android:id="@+id/Neutral"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/neutral"
        android:visibility="gone"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="223dp" />

    <ImageView
        android:id="@+id/Happy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cropToPadding="true"
        android:src="@drawable/happy"
        android:visibility="visible"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="208dp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:checked="false"
        android:text="ToggleButton"
        android:textOff="Start Run"
        android:textOn="End Run"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar6"
        app:layout_constraintVertical_bias="0.904"
        app:layout_editor_absoluteX="50dp"
        app:layout_editor_absoluteY="25dp" />

</android.support.constraint.ConstraintLayout>
