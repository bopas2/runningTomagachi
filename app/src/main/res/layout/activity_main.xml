<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.langt.myapplication.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background3"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/Happy"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignLeft="@+id/Neutral"
            android:layout_alignStart="@+id/Neutral"
            android:layout_alignTop="@+id/Sad"
            android:cropToPadding="true"
            android:src="@drawable/happy"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="199dp" />

        <ImageView
            android:id="@+id/Neutral"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_above="@+id/toggleButton2"
            android:layout_alignLeft="@+id/progressBar"
            android:layout_alignStart="@+id/progressBar"
            android:layout_marginBottom="16dp"
            android:src="@drawable/neutral"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="211dp" />

        <ImageView
            android:id="@+id/food"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/dead"
            android:layout_toEndOf="@+id/toggleButton2"
            android:layout_toRightOf="@+id/toggleButton2"
            android:src="@drawable/bowl"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="232dp"
            tools:layout_editor_absoluteY="258dp" />

        <ImageView
            android:id="@+id/Sad"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_above="@+id/toggleButton2"
            android:layout_alignLeft="@+id/progressBar"
            android:layout_alignStart="@+id/progressBar"
            android:layout_marginBottom="14dp"
            android:cropToPadding="true"
            android:src="@drawable/sad"
            android:visibility="invisible" />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="44dp"
            android:textOff="Begin Run!"
            android:textOn="End run!" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Level: " />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:text="XP: x/y" />

        <TextView
            android:id="@+id/goldDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:text="Gold:" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/goldDisplay"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/goldDisplay"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="85dp"
            android:layout_height="125dp"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/catfood"
            android:onClick="buyFood" />

        <ImageView
            android:id="@+id/dead"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_above="@+id/toggleButton2"
            android:layout_toLeftOf="@+id/goldDisplay"
            android:layout_toStartOf="@+id/goldDisplay"
            android:visibility="invisible"
            app:srcCompat="@drawable/deadcat" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
